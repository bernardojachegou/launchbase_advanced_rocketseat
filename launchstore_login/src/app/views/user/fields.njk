<div class="item">
  <div>Nome Completo</div>
  <div class="input">
    <input type="text" name="name" placeholder="Digite o seu nome completo" value="{{user.name}}">
  </div>
</div>

<div class="item">
  <div>Email</div>
  <div class="input">
    <input type="email" name="email" placeholder="Digite o seu email" value="{{user.email}}">
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div class="input">
    <input type="password" name="password" placeholder="Mínimo de 6 caracteres" value="{{user.password}}">
  </div>
</div>

{% if not user.id %}
  <div class="item">
    <div>Repetir Senha</div>
    <div class="input">
      <input type="password" name="passwordRepeat" placeholder="Repita a senha escolhida">
    </div>
  </div>
{% endif %}

<div class="item">
  <div>CPF ou CNPJ</div>
  <div class="input">
    <input type="text" name="cpf_cnpj" placeholder="000.000.000-00" value="{{user.cpf_cnpj}}">
  </div>
</div>

<div class="item">
  <div>CEP</div>
  <div class="input">
    <input type="text" name="cep" placeholder="00000-000" value="{{user.cep}}">
  </div>
</div>

<div class="item">
  <div>Endereço Completo</div>
  <div class="input">
    <input type="text" name="address" placeholder="Digite o seu endereço completo" value="{{user.address}}">
  </div>
</div>