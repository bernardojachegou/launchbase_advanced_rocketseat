{% macro products(name, classes, products) %}

  <section class="shop {{classes}}">

    {% if name %}
      <h2>{{name}}</h2>
    {% endif %}

    <div class="items">
      {% for product in products %}
        <div class="product">
          <div class="image">
            <img class="background-img" src="{{product.img}}" alt="{{product.img}}">
          </div>
          {% if product.old_price != product.price %}
            <div class="old-price">{{product.old_price}}</div>
          {% endif %}
          <p>{{product.price}}</p>
          <h4>{{product.name}}</h4>

          <a href="/products/{{product.id}}" class="button">Ver produto</a>
        </div>
      {% endfor %}
    </div>
  </section>

{% endmacro %}